{
  "name": "bayfrontmedia/multi-curl",
  "description": "A simple HTTP client to make single or asynchronous requests utilizing the cURL library.",
  "homepage": "https://github.com/bayfrontmedia/multi-curl",
  "license" : "MIT",
  "type": "library",
  "keywords": [
    "php",
    "http",
    "client",
    "request",
    "response",
    "curl",
    "asynchronous"
  ],
  "authors": [
    {
      "name": "John Robinson",
      "email": "john@bayfrontmedia.com",
      "homepage": "https://www.bayfrontmedia.com"
    }
  ],
  "support": {
    "issues": "https://github.com/bayfrontmedia/multi-curl/issues"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist"
  },
  "require": {
    "php": "^8.0",
    "ext-curl": "*",
    "ext-json": "*",
    "bayfrontmedia/php-array-helpers": "^2.0",
    "bayfrontmedia/php-mime-types": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "Bayfront\\MultiCurl\\": "src/"
    }
  }
}
